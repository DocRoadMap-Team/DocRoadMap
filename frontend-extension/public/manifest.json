{
  "manifest_version": 3,
  "version": "1.2.0",
  "name": "DocRoadMap",
  "description": "DocRoadMap App",
  "icons": {
    "128": "icon128.png"
  },
  "action": {
    "default_icon": {
      "128": "icon128.png"
    },
    "default_title": "DocRoadMap",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": [
        "*://*.gouv.fr/*",
        "*://*.ameli.fr/*",
        "*://*.caf.fr/*",
        "*://*.impots.gouv.fr/*",
        "*://*.service-public.fr/*",
        "*://*.legifrance.gouv.fr/*",
        "*://*.franceconnect.gouv.fr/*",
        "*://*.demarches-simplifiees.fr/*",
        "*://*.mesdroitssociaux.gouv.fr/*",
        "*://*.mes-aides.gouv.fr/*"
      ]
    }
  ],

  "content_scripts": [
    {
      "matches": [
        "*://*.gouv.fr/*",
        "*://*.ameli.fr/*",
        "*://*.caf.fr/*",
        "*://*.impots.gouv.fr/*",
        "*://*.service-public.fr/*",
        "*://*.legifrance.gouv.fr/*",
        "*://*.franceconnect.gouv.fr/*",
        "*://*.demarches-simplifiees.fr/*",
        "*://*.mesdroitssociaux.gouv.fr/*",
        "*://*.mes-aides.gouv.fr/*"
      ],
      "js": ["src/content/content.tsx"]
    }
  ],
  "background": {
    "service_worker": "public/background.js"
  },
  "permissions": ["storage", "activeTab"],

  "host_permissions": [
    "*://*.gouv.fr/*",
    "*://*.ameli.fr/*",
    "*://*.caf.fr/*",
    "*://*.impots.gouv.fr/*",
    "*://*.service-public.fr/*",
    "*://*.legifrance.gouv.fr/*",
    "*://*.franceconnect.gouv.fr/*",
    "*://*.demarches-simplifiees.fr/*",
    "*://*.mesdroitssociaux.gouv.fr/*",
    "*://*.mes-aides.gouv.fr/*"
  ]
}

{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "DocRoadMap Extension",
  "description": "This is the DocRoadMap Extension for Browser",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "js/index.html",
    "default_title": "DocRoadMap Extension"
  }
}
